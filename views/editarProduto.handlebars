<link rel="stylesheet" href="/public/css/editarProduto.css">
<link rel="stylesheet" href="/public/media/media.css">
<form action="/adm/produtos/editar" method="post">
  <div class="form-group">
    <label for="id">ID</label>
    <input type="text" class="form-control" placeholder="" id="id" name="id" value="{{produto.dataValues.id}}" readonly>
  </div>
  <div class="form-group">
    <label for="descricao">Descrição</label>
    <input type="text" class="form-control" placeholder="Descrição do produto" id="descricao" name="descricao" value="{{produto.dataValues.descricao}}">
  </div>
  <div class="form-group">
    <label for="valor">Valor</label>
    <input type="text" class="form-control" placeholder="Informe o valor unitário" id="valor" name="valor" value="{{produto.dataValues.valor}}">
  </div>
  <button type="submit" class="btn btn-primary">Enviar</button>
</form>